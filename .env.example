# ============================================
# TIME8 ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control


# ============================================
# REQUIRED - Supabase Configuration
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here


# ============================================
# REQUIRED - Application URLs
# ============================================
# Base URL for your application (used in emails and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000


# ============================================
# REQUIRED - Lemon Squeezy Billing
# ============================================
# Get these from your Lemon Squeezy account settings
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key_here
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret

# Product variant IDs (from your Lemon Squeezy product)
LEMONSQUEEZY_MONTHLY_VARIANT_ID=972634
LEMONSQUEEZY_YEARLY_VARIANT_ID=972635

# Pricing configuration (fallback when API fails)
# Graduated pricing model: First 3 seats FREE, 4+ users pay for ALL seats
# These are tier 4+ prices from LemonSqueezy (used only if API fetch fails)
MONTHLY_PRICE_PER_SEAT=10.00   # PLN per seat per month
ANNUAL_PRICE_PER_SEAT=8.00     # PLN per seat per month (96 PLN/year รท 12 months)

# Public pricing (for client-side fallback display)
NEXT_PUBLIC_MONTHLY_PRICE_PER_SEAT=10.00
NEXT_PUBLIC_ANNUAL_PRICE_PER_SEAT=8.00
NEXT_PUBLIC_CURRENCY=PLN
NEXT_PUBLIC_LEMONSQUEEZY_MONTHLY_VARIANT_ID=972634
NEXT_PUBLIC_LEMONSQUEEZY_YEARLY_VARIANT_ID=972635


# ============================================
# REQUIRED - Email Service (Resend)
# ============================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Email addresses used for sending notifications
RESEND_FROM_EMAIL=noreply@time8.io
RESEND_REPLY_TO_EMAIL=support@time8.io


# ============================================
# OPTIONAL - Critical Alerts
# ============================================
# Slack webhook URL for critical billing alerts
# Get this by creating a Slack App with Incoming Webhooks
# Example: https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_WEBHOOK_URL=

# Admin email address(es) for critical alert notifications
# Comma-separated list for multiple recipients
# Example: admin@yourcompany.com,billing@yourcompany.com
ADMIN_ALERT_EMAIL=admin@time8.io


# ============================================
# OPTIONAL - Background Jobs Configuration
# ============================================
# Vercel Cron authorization token (auto-generated by Vercel)
# No need to set manually - Vercel provides this automatically
# CRON_SECRET=auto_generated_by_vercel

# Background job configuration
# How far in advance to update seat changes (in hours)
APPLY_PENDING_CHANGES_ADVANCE_HOURS=24

# Reconciliation job configuration
# Threshold for critical alert (seat count difference)
RECONCILIATION_ALERT_THRESHOLD=2


# ============================================
# OPTIONAL - Feature Flags
# ============================================
# Enable/disable seat management grace period feature
ENABLE_SEAT_GRACE_PERIODS=true

# Enable/disable background jobs (cron)
ENABLE_BACKGROUND_JOBS=false

# Enable/disable critical alerts
ENABLE_CRITICAL_ALERTS=true


# ============================================
# DEVELOPMENT ONLY
# ============================================
# Set to "development" for local dev, "production" for prod
NODE_ENV=development

# Enable verbose logging
DEBUG=false

# Disable analytics in development
NEXT_PUBLIC_DISABLE_ANALYTICS=true
